alt + shift - h : yabai -m window --focus west
alt + shift - l : yabai -m window --focus east
alt + shift - k : yabai -m window --focus north
alt + shift - j : yabai -m window --focus south

alt + shift - f : yabai -m window --toggle zoom-fullscreen

alt + shift - 1 : yabai -m space --focus 1
alt + shift - 2 : yabai -m space --focus 2
alt + shift - 3 : yabai -m space --focus 3
alt + shift - 4 : yabai -m space --focus 4
alt + shift - 5 : yabai -m space --focus 5
alt + shift - 6 : yabai -m space --focus 6
alt + shift - 7 : yabai -m space --focus 7
alt + shift - 8 : yabai -m space --focus 8
alt + shift - 9 : yabai -m space --focus 9
alt + shift - 10 : yabai -m space --focus 10

alt + shift - n: yabai -m space --focus next
alt + shift - p : yabai -m space --focus prev
alt + shift - b : yabai -m space --focus recent
# left bracket
alt + shift - 0x21 : yabai -m space --focus first
# right bracket
alt + shift - 0x1E : yabai -m space --focus last


alt + shift - t : yabai -m space --layout bsp
alt + shift - 0x31 : yabai -m space --layout float
alt + shift - s : yabai -m space --layout stack

meh - n : yabai -m space --rotate 90
meh - p : yabai -m space --rotate 270

# can't get angle brackets to work
# sends same hex codes as comma and period, but the flags are different
# i have different key on ergodox for angle brackets, but using meh or shift + ctrl + alt won't work with these hex codes
# not sure why
alt + shift - 0x2F : yabai -m space --move next
alt + shift - 0x2B : yabai -m space --move prev

alt + shift - 0x1B : yabai -m space --balance x-axis
alt + shift - 0x2A : yabai -m space --balance y-axis

meh - 0x1B : yabai -m space --mirror x-axis
meh - 0x2A : yabai -m space --mirror y-axis

meh - h : yabai -m window --swap west
meh - l : yabai -m window --swap east
meh - k : yabai -m window --swap north
meh - j : yabai -m window --swap south

