# see default mappings in tridactyl/src/lib/config.ts

colors shydactyl

# bug; some sites are starting in visual mode randomly
set visualenterauto false
set visualexitauto false

set smoothscroll true

set hintchars jklasdfuiowermv

set searchurls.w https://www.wikipedia.org/w/index.php?title=Special:Search&search=%s
set searchurls.y https://www.youtube.com/results?search_query=%s
set searchurls.a https://www.amazon.ca/s/?field-keywords=%s
set searchurls.g https://www.google.com/search?q=%s
set searchurls.map https://www.google.com/maps?q=%s
set searchurls.gh https://github.com/search?q=%s
set searchurls.t https://twitter.com/search?q=%s
set searchurls.r https://www.reddit.com/search/?q=%s
set searchurls.rg https://www.google.com/search?q=%s+Reddit
set searchurls.sr https://www.reddit.com/r/%s
set searchurls.hr https://www.hockey-reference.com/search/search.fcgi?search=%s
set searchurls.tah https://theathletic.com/nhl/team/%s
set searchurls.ens https://www.espn.com/nhl/team/schedule/_/name/%s

bind x tabclose
bind X undo
bind zx winclose

bind h back
bind l forward

bind H scrollpx -5
bind L scrollpx 5

bind j scrollline 5
bind k scrollline -5

bind d scrollpage 0.5
bind u scrollpage -0.5
bind e scrollpage -0.5

bind D scrollpage 1
bind U scrollpage -1
bind E scrollpage -1

bind yt tabduplicate

bind gw tabdetach
bind gp pin

bind gs mute toggle
bind gm mute all
bind gM unmute all

bind gn findselect
bind gN composite findnext --search-from-view --reverse; findselect

bind / fillcmdline find
bind ? fillcmdline find --reverse
bind n findnext --search-from-view
bind N findnext --search-from-view --reverse
bind g/ nohlsearch

bind --mode=ex <ArrowDown>  ex.next_completion
bind --mode=ex <ArrowUp>  ex.prev_completion 
bind --mode=ex <A-j>  ex.next_history
bind --mode=ex <A-k>  ex.prev_history 

# doesn't work?
bind --mode=browser <C-Escape> escapehatch
